{
    "hosting": {
        "public": "dist/ph-calculatorsx/browser",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "redirects": [
            {
                "source": "**",
                "destination": "https://www.phcalculators.com/:1",
                "type": 301,
                "regex": true
            }
        ]
    }
}